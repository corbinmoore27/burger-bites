<h1>Burger Bites!</h1>

<h2>Order Up!</h2>

<ol>
  {{#each burgers}}
    {{#unless devoured}} {{burger_name}}
  <li>

    <button class="change-devour" data-id="{{id}}">
      Devour It!
    </button>
  </li>
    {{/unless}}
  {{/each}}
</ol>
<hr>
<ul>
  {{#each burgers}} {{#if devoured}}
  <li>
    {{burger_name}}
  </li>
  {{/if}} {{/each}}
</ul>


<h2>Enter your burger order here!</h2>
<form class="create-form">

  <div class="form-group">
    <input type="text" id="bg" name="burger_name">
  </div>

  <button type="submit">Submit</button>
</form>